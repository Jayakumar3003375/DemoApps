@using Property.Web.ViewModels
@model RegistrationViewModel
@if (Model != null && Model.Registration.Id > 0)
{
    ViewData["Title"] = "Edit";
}
else
{
    ViewData["Title"] = "Create";
}

<form method="post">

    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            @if (Model != null && Model.Registration.Id > 0)
            {
                <h2 class="text-dark">Edit Customer/Owner Registration</h2>
            }
            else
            {
                <h2 class="text-dark">Add Customer/Owner Registration</h2>
            }
        </div>
        @*<div class="" asp-validation-summary="All"></div>*@
            <input asp-for="Registration.Id" hidden />

        <div class="mb-3 col-6">
            <label asp-for="Registration.Name"></label>
            <input asp-for="Registration.Name" class="form-control" />
            <span asp-validation-for="Registration.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Registration.Address"></label>
            <input asp-for="Registration.Address" class="form-control" />
            <span asp-validation-for="Registration.Address" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Registration.City"></label>
            <input asp-for="Registration.City" class="form-control" />
            <span asp-validation-for="Registration.City" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Registration.MobileNumber"></label>
            <input asp-for="Registration.MobileNumber" class="form-control" />
            <span asp-validation-for="Registration.MobileNumber" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Registration.Email"></label>
            <input asp-for="Registration.Email" class="form-control" />
            <span asp-validation-for="Registration.Email" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Registration.Type"></label>
            <select asp-for="Registration.Type" class="form-control" asp-items="Model.CustomerType">
                <option disabled selected>--select--</option>
            </select>
            <span asp-validation-for="Registration.Type" class="text-danger"></span>
        </div>

        @if (Model != null && Model.Registration.Id > 0)
        {
            <button class="btn btn-primary" style="width:150px">
                Edit
            </button>
        }
        else
        {
            <button class="btn btn-primary" style="width:150px">
                Create
            </button>
        }
        &nbsp;&nbsp;
        <a asp-action="Index" asp-controller="Registration" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
